#--- OS ---#
PLATFORM="linux"
if [ ${OSTYPE//[0-9.]/} == "darwin" ]
then
    PLATFORM="mac"
fi

#--------------#
# Exports
#--------------#

#WMAKE
export WMAKE_MODULE_DIR=$HOME/Workspace/wsnet-models
